@model FornecedorModel
@{
    ViewData["Title"] = "Editar fornecedor";
}

<div class="text-center">

    <h1 class="display-4">Editar fornecedor</h1>


</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do fornecedor">
    </div>

    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input type="number" asp-for="Cnpj" class="form-control" placeholder="Digite o CNPJ do fornecedor ">
    </div>

    <div class="form-group">
        <label for="especialidade">Especialidade</label>
        <input type="text" asp-for="Especialidade" class="form-control" placeholder="Digite a especialidade do fornecedor">
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
